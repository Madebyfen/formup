{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "rootDirs": ["./src"],
    "jsx": "react",
    "removeComments": true,
    "declarationDir": "./dist/types"
  },
  "include": ["src/**/*"],
  "exclude": [
    ".git",
    "node_modules",
    "*/__tests__/**",
    "./src/test-components.tsx"
  ]
}
